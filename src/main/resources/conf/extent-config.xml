<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
	<configuration>
		<!-- report theme -->
		<!-- standard, dark -->
		<theme>standard</theme>

		<!-- document encoding -->
		<!-- defaults to UTF-8 -->
		<encoding>UTF-8</encoding>

		<!-- protocol for script and stylesheets -->
		<!-- defaults to https -->
		<protocol>https</protocol>

		<!-- title of the document -->
		<documentTitle>:: De Gruyter ::	</documentTitle>

		<!-- report name - displayed at top-nav -->
		<reportName>:: DE GRUYTER :: 2017 - 2018  MPS LTD. 
		</reportName>

		<!-- report headline - displayed at top-nav, after reportHeadline -->
		<reportHeadline></reportHeadline>

		<!-- global date format override -->
		<!-- defaults to yyyy-MM-dd -->
		<dateFormat>dd-MM-yyyy</dateFormat>

		<!-- global time format override -->
		<!-- defaults to HH:mm:ss -->
		<timeFormat>HH:mm:ss</timeFormat>

		<!-- location of charts in the test view -->
		<!-- top, bottom -->
		<testViewChartLocation>bottom</testViewChartLocation>

		<!-- settings to enable/disable views -->
		<enableCategoryView>true</enableCategoryView>
		<enableAuthorView>true</enableAuthorView>
		<enableExceptionView>true</enableExceptionView>
		<enableTestRunnerLogsView>true</enableTestRunnerLogsView>

		<!-- custom javascript -->
		<scripts>
            <![CDATA[
                $(document).ready(function() {      
                $('.dashboard-view').click();                        
                });
            ]]>
		</scripts>

		<!-- custom styles -->
		<styles>
            <![CDATA[                 
                 
                 .nav-right{display:none;}.logo-container{display:none;}.report-name{font-size:14px;padding-left:10px !important;}		
            ]]>
		</styles>
	</configuration>
</extentreports>